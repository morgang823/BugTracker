@page
@model LoginModel
@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group btn-outline-success">
                    <label class="text-white" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control text-black" />
                    <span asp-validation-for="Input.Email" class="text-black"></span>
                </div>
                <div class="form-group btn-outline-success">
                    <label class="text-white" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control text-black" />
                    <span asp-validation-for="Input.Password" class="text-black"></span>
                </div>
                <div class="form-group btn-outline-success">
                    <div class="checkbox">
                        <label  class="text-white" asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark">Log in</button>
                    <hr />
                </div>
                <div class="form-group">
                    <h5 class="text-black">
                        <a class="btn btn-success btn-outline-dark font-weight-bold" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </h5>
                    <h5 class="text-black">
                        <a class="btn btn-success btn-outline-dark font-weight-bold" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </h5>
                    <h5 class="text-black">
                        <a class="btn btn-success btn-outline-dark font-weight-bold" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </h5>
                </div>
            </form>
        </section>
    </div>
</div>
<div class="row">
    <div class="col">
        <section>
            <h4>Use another service to log in.</h4>
            <hr />
            <form id="account" method="post">
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-success btn-outline-dark font-weight-bold" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                            <button type="submit" class="btn btn-success btn-outline-dark font-weight-bold" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                            <button type="submit" class="btn btn-success btn-outline-dark font-weight-bold" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                            <button type="submit" class="btn btn-success btn-outline-dark font-weight-bold" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
