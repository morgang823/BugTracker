@page
@model RegisterByInviteModel
@{ Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "RegisterByInviteModel"; }


<div class="row">
    <div class="col">
        <section>
            <form class="form-auth-small" method="post">
                <input hidden asp-for="Input.CompanyId" />
                <input hidden asp-for="Input.ProjectId" />
                <div class="form-group btn-outline-success">
                    <label asp-for="Input.Email" class="text-white">Email</label>
                    <input type="email" class="form-control text-black" asp-for="Input.Email" placeholder="Your email">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group btn-outline-success">
                    <label asp-for="Input.FirstName" class="text-white"></label>
                    <input asp-for="Input.FirstName" class="form-control text-black" placeholder="First Name" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group btn-outline-success">
                    <label asp-for="Input.LastName" class="text-white"></label>
                    <input asp-for="Input.LastName" class="form-control text-black" placeholder="Last Name" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group btn-outline-success">
                    <label asp-for="Input.Company" class="text-white"></label>
                    <input asp-for="Input.Company" class="form-control text-black" disabled />
                </div>
                <hr />
                <div class="form-group btn-outline-success">
                    <label asp-for="Input.Password" class="text-white"></label>
                    <input asp-for="Input.Password" class="form-control text-black" type="password" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group btn-outline-success">
                    <label asp-for="Input.ConfirmPassword" class="text-white"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control text-black" type="password" placeholder="Confirm Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">REGISTER</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}