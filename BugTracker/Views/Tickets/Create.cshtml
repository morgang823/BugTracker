@model BugTracker.Models.Ticket

@{
    ViewData["Title"] = "Create";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create a Ticket</h1>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item active">Add Ticket</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-lg-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">General</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Title" class="form-control"></label>
                            <input asp-for="Title" class="form-control bg-light text-dark" id="inputName" />
                            <span asp-validation-for="Title" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="form-control"></label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <textarea id="inputDescription"asp-for="Description" class="form-control bg-light text-dark" rows="4"></textarea>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"><option>Select a Project </option></select>
                            </div>
                            <div class="form-group">
                                <select asp-for="TicketTypeId" class="form-control" asp-items="ViewBag.TicketTypeId"><option>Select a Type </option></select>
                            </div>
                            <div class="form-group">
                                <select asp-for="TicketPriorityId" class="form-control" asp-items="ViewBag.TicketPriorityId"><option>Select a Priority </option></select>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.card -->
                @*<div class="form-group">
                    <label asp-for="TicketStatusId" class="control-label"></label>
                    <select asp-for="TicketStatusId" class ="form-control" asp-items="ViewBag.TicketStatusId"></select>
                </div>*@
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-primary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</section>
<!-- /.content -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
